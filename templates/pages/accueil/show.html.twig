{% extends 'base.html.twig' %}

{% block title %}{{ evenement.nom }}{% endblock %}

{% block body %}
<div class="container my-5">
  <div class="row">
    <div class="col-md-6">
      <img src="{{ asset('uploads/' ~ evenement.illustration) }}"
           class="img-fluid rounded shadow" alt="{{ evenement.nom }}">
    </div>
    <div class="col-md-6">
      <h1 class="event-title">{{ evenement.nom }}</h1>
      <p class="text-muted"><strong>Lieu :</strong> {{ evenement.lieu }}</p>
      <p><strong>Date :</strong> {{ evenement.dateDebut|date('d/m/Y') }}</p>
      <div class="event-description mt-4">
        {{ evenement.description|raw }}
      </div>

      <a href="{{ path('evenements_liste') }}" class="btn btn-outline-primary mt-4">
        ⬅ Retour à la liste
      </a>
    </div>
  </div>
</div>
<style>

  .body {
    background: linear-gradient(to right,rgb(243, 242, 192), #f8f9fa);
    font-family: 'Segoe UI', sans-serif;
  }
</style>
{% endblock %}
